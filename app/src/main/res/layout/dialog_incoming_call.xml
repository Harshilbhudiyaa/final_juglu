<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_rounded"
    android:padding="24dp"
    android:elevation="16dp">

    <!-- Caller Info -->
    <ImageView
        android:id="@+id/incoming_caller_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_profile_placeholder"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_circle_img"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/incoming_caller_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Incoming call..."
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/incoming_call_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video Call"
        android:textColor="#4CAF50"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_accept_call"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:text="Accept"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:background="@drawable/bg_button_accept"
            android:layout_marginEnd="12dp"/>

        <Button
            android:id="@+id/btn_reject_call"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:text="Reject"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:background="@drawable/bg_button_reject"/>
    </LinearLayout>
</LinearLayout>
