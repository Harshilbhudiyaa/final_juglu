<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp"
    android:gravity="center"
    android:clipToPadding="false">

    <!-- Floating Hearts Animation -->


    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What are you looking for?"
            android:textSize="28sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.01"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select your relationship preference"
            android:textSize="16sp"
            android:textColor="#CCFFFFFF"
            android:fontFamily="sans-serif"/>
    </LinearLayout>

    <!-- Cards Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/header"
        android:layout_marginTop="32dp"
        android:padding="16dp"
        android:background="@drawable/glass_card"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="24dp"
            android:gravity="center">

            <!-- Boyfriend Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardBoyfriend"
                android:layout_width="0dp"
                android:layout_height="220dp"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#20FFFFFF"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_ripple_boyfriend"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <!-- Icon with circular background -->
                        <FrameLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/circle_bg_boyfriend"
                            android:elevation="4dp">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_boyfriend"
                                android:layout_gravity="center"
                                />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Boyfriend"
                            android:textSize="20sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="24dp"/>
                    </LinearLayout>

                    <!-- Selection Indicator -->
                    <ImageView
                        android:id="@+id/boyfriendCheck"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_check_circle"
                        app:tint="#7F00FF"
                        android:visibility="invisible"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="12dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Girlfriend Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardGirlfriend"
                android:layout_width="0dp"
                android:layout_height="220dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#20FFFFFF"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_ripple_girlfriend"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <!-- Icon with circular background -->
                        <FrameLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/circle_bg_girlfriend"
                            android:elevation="4dp">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_girlfriend"
                                android:layout_gravity="center"
                                />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Girlfriend"
                            android:textSize="20sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="24dp"/>
                    </LinearLayout>

                    <!-- Selection Indicator -->
                    <ImageView
                        android:id="@+id/girlfriendCheck"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_check_circle"
                        app:tint="#FF4EC7"
                        android:visibility="invisible"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="12dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="8dp">

            <!-- Skip Button -->
            <Button
                android:id="@+id/btnSkip"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Skip for Now"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/button_outline_purple"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01"
                android:elevation="4dp"/>

            <!-- Confirm Button -->
            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Confirm"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:background="@drawable/button_gradient"
                android:alpha="0.7"
                android:enabled="false"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01"
                android:elevation="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Decoration -->

</RelativeLayout>