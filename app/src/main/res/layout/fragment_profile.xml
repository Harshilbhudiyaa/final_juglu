<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Profile Header - Modern Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="1dp"
                app:strokeColor="#F0F0F0"
                app:strokeWidth="0.5dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center_horizontal">

                    <!-- Profile Image with Shadow -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="60dp"
                        android:outlineProvider="background">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/profile_image"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/image1"
                            app:shapeAppearanceOverlay="@style/CircleImageView"
                            app:strokeColor="#F5F5F5"
                            app:strokeWidth="1dp"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="vansh mandanka"
                        android:textColor="#212121"
                        android:textSize="24sp"
                        android:letterSpacing="-0.01"
                        android:fontFamily="@font/poppins_bold"/>

                    <TextView
                        android:id="@+id/user_bio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Software Developer | Coffee Lover"
                        android:textColor="#757575"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:lineSpacingExtra="2dp"
                        android:fontFamily="@font/poppins_regular"/>

                    <!-- Modern Button with Icon -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/edit_profile_button"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Edit Profile"
                        android:textAllCaps="false"
                        android:drawableStart="@drawable/ic_edit"
                        android:drawablePadding="8dp"
                        app:iconTint="#6750A4"
                        app:strokeColor="#6750A4"
                        app:strokeWidth="1dp"
                        app:cornerRadius="12dp"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="24dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Stats Section - Modern Grid -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="1dp"
                app:strokeColor="#F0F0F0"
                app:strokeWidth="0.5dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="16dp">

                    <!-- Friends -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/friends_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="128"
                            android:textColor="#212121"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Friends"
                            android:textColor="#9E9E9E"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_regular"/>
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="2dp"
                        android:layout_height="40dp"
                        android:background="@color/divider"/>

                    <!-- Posts -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/posts_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="56"
                            android:textColor="#212121"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Posts"
                            android:textColor="#9E9E9E"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_regular"/>
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="2dp"
                        android:layout_height="40dp"
                        android:background="@color/divider"/>

                    <!-- Likes -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/likes_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.2K"
                            android:textColor="#212121"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Likes"
                            android:textColor="#9E9E9E"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_regular"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- Settings Section - Modern List -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="1dp"
                app:strokeColor="#F0F0F0"
                app:strokeWidth="0.5dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Settings"
                        android:textColor="#212121"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/poppins_semibold"/>

                    <!-- Settings Items with Icons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:divider="@drawable/divider_horizontal"
                        android:showDividers="middle">

                        <!-- Privacy Settings -->
                        <LinearLayout
                            android:id="@+id/privacy_settings_button"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:background="?selectableItemBackground">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="16dp"
                                android:src="@drawable/ic_privacy"
                                app:tint="#9E9E9E"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Privacy Settings"
                                android:textColor="#212121"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins_regular"/>

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_chevron_right"
                                app:tint="#BDBDBD"/>
                        </LinearLayout>

                        <!-- Blocked Users -->
                        <LinearLayout
                            android:id="@+id/blocked_users_button"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:background="?selectableItemBackground">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="16dp"
                                android:src="@drawable/ic_block"
                                app:tint="#9E9E9E"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Blocked Users"
                                android:textColor="#212121"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins_regular"/>

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_chevron_right"
                                app:tint="#BDBDBD"/>
                        </LinearLayout>

                        <!-- Logout -->
                        <LinearLayout
                            android:id="@+id/logout_button"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:background="?selectableItemBackground">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="16dp"
                                android:src="@drawable/ic_logout"
                                app:tint="#9E9E9E"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Logout"
                                android:textColor="#F44336"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins_regular"/>

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_chevron_right"
                                app:tint="#BDBDBD"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Additional Features Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="1dp"
                app:strokeColor="#F0F0F0"
                app:strokeWidth="0.5dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="More Features"
                        android:textColor="#212121"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/poppins_semibold"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/profile_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:paddingVertical="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>