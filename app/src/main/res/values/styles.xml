<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Form Input Style -->
    <style name="FormInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:elevation">4dp</item>
        <item name="rippleColor">@color/primary_dark</item>
    </style>

    <!-- Text Style -->
    <style name="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Header Text Style -->
    <style name="HeaderTextStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CircleImageViews" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ModernInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/input_box_states</item>
        <item name="hintTextColor">@color/hint_color_states</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="startIconTint">@color/icon_gray</item>
        <item name="endIconTint">@color/icon_gray</item>
        <item name="counterOverflowTextColor">?attr/colorError</item>
        <item name="counterTextColor">@color/text_secondary</item>
        <item name="errorTextColor">?attr/colorError</item>
        <item name="errorIconTint">?attr/colorError</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>


    <style name="DarkInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/dark_input_box_states</item>
        <item name="hintTextColor">@color/dark_hint_color_states</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="startIconTint">#9E9E9E</item>
        <item name="endIconTint">#9E9E9E</item>
        <item name="counterOverflowTextColor">?attr/colorError</item>
<!--        <item name="counterTextColor">#BDBDBD</item>-->
        <item name="errorTextColor">?attr/colorError</item>
        <item name="errorIconTint">?attr/colorError</item>
        <item name="android:textColorHint">#9E9E9E</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.Corner.Full"
        parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources> 